<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Cookbook</title>
    <%= stylesheet_link_tag "default", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <% if iphone_user_agent?(request) -%>
      <div>
        <p>
          <a href="http://icookbook.localhost.com:3000">Using an iPhone?</a>
        </p>
      </div>
    <% end -%>
    <div id="doc" class="yui-t2">
      <div id="hd">
        <h1>Cookbook</h1>
      </div>
      <div id="bd">
        <div id="yui-main">
          <div class="yui-b">
            <div class="yui-g">
              <%= image_tag 'loading.gif', :id => 'spinner', :style => "display:none;" %>
              <div id="content_for_layout">
                <%= render :partial => "shared/flash", :locals => {:flash => flash} %>
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
        <div id="sidebar" class="yui-b">
          <% if logged_in? -%>
            <ul>
              <li>
                <%= link_to "My Recipes", :controller => "recipes", :action => "index" %>
              </li>
              <li>
                <%= link_to "All Recipes", all_recipes_url %>
              </li>
              <li>
                <%= link_to "New Recipe", :controller => "recipes", :action => "new" %>
              </li>
              <li>
                <%= link_to "Logout", :controller => "login", :action => "logout" %>
              </li>
            </ul>
          <% end -%>
        </div>
      </div>
      <div id="ft">
        <div class="credits">Copyright &copy;<%= Date.today.year %></div>
      </div>
    </div>
  </body>
</html>
